<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:orientation="vertical">

		 <!-- interface alias / name -->
		 <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <TextView android:id="@+id/editor_interface_alias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:paddingTop="6dip"
                android:paddingRight="6dip" 
                android:paddingLeft="6dip" />
            <TextView android:id="@+id/editor_interface_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@id/editor_interface_alias"
                android:layout_alignParentLeft="true"
                android:paddingTop="6dip" 
                android:paddingBottom="6dip" 
                android:paddingRight="6dip" 
                android:paddingLeft="6dip" />
            <ImageView android:id="@+id/editor_image_interface_type"
                android:layout_width="31px"
                android:layout_height="37px"
                android:layout_alignParentRight="true"
                android:paddingTop="6dip" 
                android:paddingBottom="6dip" 
                android:paddingRight="6dip"
                android:scaleType="fitCenter" />
        </RelativeLayout>

		<!-- Transmitted Data -->
		<TextView style="?android:attr/listSeparatorTextViewStyle"
			android:text="@string/editor_category_data" />
		
		<!-- Numbers -->
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingTop="6dip" android:paddingBottom="6dip" >
			
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal"
				android:baselineAligned="true" android:paddingTop="-1dip">
				<TextView android:text="@string/editor_label_data_received"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:maxLines="1" android:paddingTop="6dip" android:paddingLeft="6dip" />
				<LinearLayout android:background="@drawable/dotted_line"
					android:layout_width="fill_parent"
          android:layout_height="1px"
          android:orientation="vertical"
          android:layout_marginLeft="1dip" 
          android:layout_marginRight="1dip"
          android:layout_marginBottom="4dip"
          android:layout_gravity="bottom"
          android:layout_weight="1" />
				<TextView android:id="@+id/editor_data_received"
					android:paddingTop="6dip" android:paddingRight="6dip"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:maxLines="1" />
			</LinearLayout>
			
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal"
				android:baselineAligned="true" android:paddingTop="-1dip">
				<TextView android:text="@string/editor_label_data_sent"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:maxLines="1" android:paddingTop="6dip" android:paddingLeft="6dip" />
				<LinearLayout android:background="@drawable/dotted_line"
          android:layout_width="fill_parent"
          android:layout_height="1px"
          android:orientation="vertical"
          android:layout_marginLeft="1dip" 
          android:layout_marginRight="1dip"
          android:layout_marginBottom="4dip"
          android:layout_gravity="bottom"
          android:layout_weight="1" />
				<TextView android:id="@+id/editor_data_sent"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:paddingTop="6dip" android:paddingRight="6dip"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:maxLines="1" />
			</LinearLayout>
			
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal"
				android:baselineAligned="true" android:paddingTop="-1dip">
				<TextView android:text="@string/editor_label_data_total"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:maxLines="1" android:paddingTop="6dip" android:paddingLeft="6dip" />
				<LinearLayout android:background="@drawable/dotted_line"
          android:layout_width="fill_parent"
          android:layout_height="1px"
          android:orientation="vertical"
          android:layout_marginLeft="1dip" 
          android:layout_marginRight="1dip"
          android:layout_marginBottom="4dip"
          android:layout_gravity="bottom"
          android:layout_weight="1" />
				<TextView android:id="@+id/editor_data_total"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:paddingTop="6dip" android:paddingRight="6dip"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:maxLines="1" />
			</LinearLayout>
			
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal"
				android:baselineAligned="true" android:paddingTop="-1dip">
				<TextView android:text="@string/editor_label_transmission_limit"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:maxLines="1" android:paddingTop="6dip" android:paddingLeft="6dip" />
				<LinearLayout android:background="@drawable/dotted_line"
          android:layout_width="fill_parent"
          android:layout_height="1px"
          android:orientation="vertical"
          android:layout_marginLeft="1dip" 
          android:layout_marginRight="1dip"
          android:layout_marginBottom="4dip"
          android:layout_gravity="bottom"
          android:layout_weight="1" />
				<TextView android:id="@+id/editor_transmission_limit"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:paddingTop="6dip" android:paddingRight="6dip"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:maxLines="1" />
			</LinearLayout>

			<!-- transmission limit / reset button  -->
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:gravity="bottom"
				android:orientation="horizontal" android:paddingTop="6dip" 
				android:paddingBottom="6dip">
				<Button android:id="@+id/editor_button_set_transmission_limit"
					android:text="@string/editor_button_set_transmission_limit"
					android:layout_width="150dip" android:paddingLeft="6dip"
					android:layout_gravity="left" android:layout_weight="0.4"
					android:layout_height="fill_parent" />
				<!-- Spacer -->
				<View android:id="@+id/buttons_spacer_left"
					android:layout_width="0dip" android:layout_height="wrap_content"
					android:layout_weight="0.2" android:visibility="gone" />

				<Button android:id="@+id/editor_button_reset_counters"
					android:text="@string/editor_button_reset_counters"
					android:layout_width="150dip" android:paddingRight="6dip"
					android:layout_gravity="right" android:layout_weight="0.4"
					android:layout_height="fill_parent" />
			</LinearLayout>
		</LinearLayout>

		<!-- Automatic reset -->
		<TextView style="?android:attr/listSeparatorTextViewStyle"
			android:text="@string/editor_category_reset" />
		<TextView android:id="@+id/editor_auto_reset_next"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:paddingTop="6dip" android:paddingLeft="6dip"
            android:paddingBottom="6dip" android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
	    <com.googlecode.netsentry.widget.cronpicker.CronPicker 
	        android:id="@+id/editor_auto_reset_cron_picker"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

	</LinearLayout>
</ScrollView>