<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="horizontal">

	<TextView android:id="@+id/cron_picker_monthly_on_day"
		android:text="@string/cron_picker_monthly_on_day"
		android:layout_width="wrap_content" android:layout_height="fill_parent"
		android:layout_marginRight="10dip" android:paddingLeft="6dip"
		android:layout_weight="1" android:paddingBottom="6dip"
		android:gravity="center_vertical|right" />

	<Button android:id="@+id/cron_picker_monthly_choose_day_button"
		android:text="@string/cron_picker_monthly_set_day"
		android:layout_width="100dip" android:layout_height="fill_parent"
		android:paddingRight="6dip" android:layout_gravity="right"
		android:layout_weight="0" android:layout_alignParentRight="true" />

</LinearLayout>